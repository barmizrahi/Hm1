<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="98dp"

        android:background="#FFFF00">

        <ImageView
            android:id="@+id/panel_IMG_bone1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/img_bone" />

        <ImageView
            android:id="@+id/panel_IMG_bone2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignTop="@id/panel_IMG_bone1"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/panel_IMG_bone1"
            android:src="@drawable/img_bone" />

        <ImageView
            android:id="@+id/panel_IMG_bone3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignTop="@id/panel_IMG_bone1"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/panel_IMG_bone2"
            android:src="@drawable/img_bone" />

        <TextView
            android:id="@+id/panel_LBL_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text="0000"
            android:textSize="50sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="536dp"

        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/panel_line1"
            android:layout_width="136dp"
            android:layout_height="match_parent"
            android:background="#FF000FFF"

            android:orientation="vertical">

            <ImageView
                android:id="@+id/panel_IMG_cat1"
                android:layout_width="120dp"
                android:layout_height="95dp"

                android:src="@drawable/img_cat1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/panel_line2"
            android:layout_width="136dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_toEndOf="@id/panel_line1"
            android:background="#FFF000FF">

            <ImageView
                android:id="@+id/panel_IMG_cat2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/img_cat2"></ImageView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/panel_line3"
            android:layout_width="136dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_toEndOf="@id/panel_line2"
            android:background="#FF00FFFF">

            <ImageView
                android:id="@+id/panel_IMG_cat3"
                android:layout_width="100dp"
                android:layout_height="100dp"

                android:src="@drawable/img_cat3"></ImageView>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="97dp"

        android:orientation="horizontal">


        <ImageView
            android:id="@+id/panel_IMG_left"
            android:layout_width="105dp"
            android:layout_height="97dp"
            android:layout_centerInParent="true"
            android:src="@drawable/img_left"></ImageView>

        <ImageView
            android:id="@+id/panel_IMG_dog"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="50dp"
            android:layout_toEndOf="@id/panel_IMG_left"
            android:src="@drawable/img_dog"></ImageView>

        <ImageView
            android:id="@+id/panel_IMG_right"
            android:layout_width="86dp"
            android:layout_height="99dp"
            android:layout_marginStart="65dp"
            android:layout_toEndOf="@id/panel_IMG_left"
            android:src="@drawable/img_right"></ImageView>


    </LinearLayout>


</LinearLayout>
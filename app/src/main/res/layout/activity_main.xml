<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/panel_main_layout"
    android:textDirection="ltr"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3.3"
        android:background="@color/black">

        <ImageView
            android:id="@+id/panel_IMG_life1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/img_life" />

        <ImageView
            android:id="@+id/panel_IMG_life2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignTop="@id/panel_IMG_life1"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/panel_IMG_life1"
            android:src="@drawable/img_life" />

        <ImageView
            android:id="@+id/panel_IMG_life3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignTop="@id/panel_IMG_life1"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/panel_IMG_life2"
            android:src="@drawable/img_life" />

        <TextView
            android:id="@+id/panel_LBL_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text="000"
            android:textColor="@color/white"
            android:textSize="50sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/panel_lanes"
        android:layout_width="match_parent"
        android:layout_height="715dp"
        android:layout_weight="0.8"
        android:background="@drawable/background_space"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="695dp"
        android:layout_weight="3"
        android:background="@color/black"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/panel_IMG_left"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="12dp"
            android:src="@drawable/img_left"></ImageView>


        <ImageView
            android:id="@+id/panel_IMG_right"
            android:layout_width="86dp"
            android:layout_height="70dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/panel_IMG_left"
            android:src="@drawable/img_right"></ImageView>


    </LinearLayout>



</LinearLayout>


<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SaveScoreActivity"
    android:background="@drawable/background_space">

    <RelativeLayout
        android:id="@+id/panel_Finish_The_Game"
        android:layout_width="407dp"
        android:layout_height="326dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="200dp"
        >


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/panel_LBL_show_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:minLines="2"
            android:text="You Fail Three Time's, Here's Your's Score Is: "
            android:textColor="#FFAB40"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/panel_LBL_insert_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/panel_LBL_show_score"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="enter name here"
            android:textColor="@color/white"
            android:textSize="35sp">

        </EditText>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/panel_BTN_ok_name"

            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/panel_LBL_insert_name"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Ok"
            android:textColor="#FFAB4A"
            android:textSize="30sp"
            app:cornerRadius="100dp"
            app:strokeColor="@color/black" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>